{
  "caches": [
    {
      "cache": {
        "name": "redis-cache-1",
        "type": "redis / guava / hazelcast / memcached",
        "config": {
          "connection": {
            "host": "localhost",
            "port": "6379",
            "pool": {
              "max-idle": 5,
              "max-active": 20
            }
          },
          "data-store": {
            "name": "data-store-redis-1",
            "type": "mysql / phoenix / hbase",
            "connection": {
              "host": "localhost",
              "port": "8888"
            },
            "load": "sync / async",
            "read": "through",
            "write": "sync / async"
          },
          "expiry-policy": {
            "ttl": {
              "count": 10,
              "unit": "seconds"
            },
            "entries": 1000,
            "size": {
              "count": 10,
              "unit": "megabytes"
            }
          }
        },
        "views": [
          {
            "view": {
              "name": "hashes-view-1",
              "type": "hashes",
              "key": "hashes-key-1"
            }
          },
          {
            "view": {
              "name": "hashes-view-2",
              "type": "hashes",
              "key": "hashes-key-2",
              "expiry-policy": {
                "ttl": {
                  "count": 10,
                  "unit": "seconds"
                },
                "entries": 1000,
                "size": {
                  "count": 10,
                  "unit": "megabytes"
                }
              }
            }
          },
          {
            "view": {
              "name": "strings-view",
              "type": "strings"
            }
          }
        ]
      }
    },
    {
      "cache": {
        "name": "guava-1",
        "type": "guava",
        "config": {
          "data-store": {
            "name": "data-store-guava-1",
            "type": "phoenix",
            "connection": {
              "host": "127.0.0.1",
              "port": "8888"
            },
            "load": "sync",
            "read": "through",
            "write": "async"
          },
          "expiry-policy": {
            "ttl": {
              "count": 100,
              "unit": "milliseconds"
            }
          }
        },
        "views": [
          {
            "view": {
              "name": "guava-1-view-1"
            }
          },
          {
            "view": {
              "name": "guava-1-view-2",
              "expiry-policy": {
                "ttl": {
                  "count": 10,
                  "unit": "seconds"
                }
              }
            }
          }
        ]
      }
    },
    {
      "cache": {
        "name": "guava-2",
        "type": "guava",
        "views": [
          {
            "view": {
              "name": "guava-2-view-1"
            }
          },
          {
            "view": {
              "name": "guava-2-view-2",
              "expiry-policy": {
                "entries": 1000
              }
            }
          }
        ]
      }
    },
    {
      "cache": {
        "name": "memcached-cache-1",
        "type": "memcached",
        "config": {
          "connection": {
            "host": "198.122,123.100",
            "port": "1234"
          },
          "expiry-policy": {
            "ttl": {
              "count": 10,
              "unit": "seconds"
            },
            "entries": 1000
          }
        },
        "views": [
          {
            "view": {
              "name": "memcached-view-1"
            }
          },
          {
            "view": {
              "name": "memcached-view-2",
              "expiry-policy": {
                "ttl": {
                  "count": 5,
                  "unit": "seconds"
                }
              }
            }
          }
        ]
      }
    }
  ]
}